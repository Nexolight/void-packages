# INSTALL

case "$ACTION" in
pre)
	;;
post)
	sed -i '/^autospawn/d' /etc/pulse/client.conf
	echo autospawn=no >> /etc/pulse/client.conf
	ldconfig
	
	#alternate to runit service
	#echo '/etc/rc.local-qubes/qubes-gui-agent/rc.local' >> /etc/rc.local

	if [ "$UPDATE" = "no" ]; then
		update-grub
        fi
	if [ "$UPDATE" = "yes" ]; then
                update-grub
        fi

	;;
esac
