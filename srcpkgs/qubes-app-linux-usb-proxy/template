do_build(){
	echo "nothing to build"
}

do_install(){
	env="DESTDIR=${DESTDIR} LIBDIR=/usr/lib USRLIBDIR=/usr/lib SYSLIBDIR=/usr/lib"
	(export ${env}; make -j ${makejobs} install-vm)
}

