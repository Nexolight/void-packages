# Template file for 'qubes-app-linux-usb-proxy'
pkgname=qubes-app-linux-usb-proxy
version=1.0.19
revision=1
build_style=gnu-makefile
hostmakedepends=""
makedepends=""
depends="qubes-core-agent-linux usbutils"
