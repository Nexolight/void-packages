# Template file for 'libticonv'
pkgname=libticonv
version=1.1.5
revision=1
wrksrc=tilibs2
#create_wrksrc=yes
#only_for_archs="i686 x86_64"
build_style=gnu-configure
#configure_args=""
#make_build_args=""
#make_install_args=""
#conf_files=""
#make_dirs="/var/log/dir 0755 root root"
hostmakedepends="pkg-config"
makedepends="automake gettext-devel libtool glib-devel"
depends="glib"
short_desc="part of the tilibs meta package"
maintainer="nexolight <snow.dream.ch@gmail.com>"
license="GPL-3"
#there's no versioning -.-
homepage="https://www.ticalc.org/"
distfiles="https://www.ticalc.org/pub/unix/tilibs.tar.gz"
checksum=af7b61b5115e5cdae6dc9396004de8828ce00d64d4428e5077a4bf1629e78e1d

pre_configure(){
	tar -xf ${pkgname}-${version}.tar.bz2
	cp -r ${pkgname}-${version}/* ./
}

do_configure(){
	autoreconf -i -f
	./configure --prefix=/usr --enable-iconv
}


libticonv-devel_package(){
	short_desc="- development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install(){
		vmove usr/include
		vmove usr/lib/pkgconfig/*.pc
	}
}
