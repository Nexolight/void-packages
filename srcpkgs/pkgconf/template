homepage="https://github.com/pkgconf/pkgconf"
distfiles="$homepage/archive/$pkgname-$version.tar.gz"
checksum=1e53e823d82a0aac7fedb12518783b1a0381cbeee55b98eb26ed3124c710222e
wrksrc="$pkgname-$pkgname-$version"

pre_configure() {
	autoreconf -fi
}
