# Template file for 'haveged'
pkgname=haveged
version=1.9.2
revision=1
build_style=gnu-configure
short_desc="Entropy harvesting daemon using CPU timings"
maintainer="Juan RP <xtraeme@voidlinux.eu>"
license="GPL-3"
homepage="http://www.issihosts.com/haveged"
distfiles="http://www.issihosts.com/haveged/${pkgname}-${version}.tar.gz"
checksum=82d5d23551bb79476e01ea55eadfd83410f6b24ad7349a238a08ea3c7e190234
configure_args="--sbindir=/usr/bin"

do_check() {
	make check
}

post_install() {
	vsv $pkgname
}

libhaveged_package() {
	short_desc+=" - runtime library"
	pkg_install() {
		vmove usr/lib/*.so.*
	}
}

libhaveged-devel_package() {
	short_desc+=" - development files"
	depends="libhaveged-${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/*.a
		vmove usr/lib/*.so
		vmove usr/share/man/man3
	}
}
