post_extract() {
	sed -i 's,@PERL5@,/usr/bin/perl,' mdoclint
	sed '1d; /^$/q' <mdoclint >LICENSE
}

do_install() {
	vbin mdoclint
	vman mdoclint.1
	vlicense LICENSE
}
