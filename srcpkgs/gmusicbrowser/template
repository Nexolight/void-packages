# Template file for 'gmusicbrowser'
pkgname=gmusicbrowser
version=1.1.15
revision=5
noarch=yes
nocross=yes
hostmakedepends="perl"
makedepends="perl-Gtk2 perl-Glib-Object-Introspection"
depends="desktop-file-utils mpg123 perl-Glib-Object-Introspection
 gst-plugins-base1 gst-plugins-good1 gst-libav"
short_desc="Open-source jukebox for large collections"
maintainer="Logen K <logen@sudotask.com>"
license="GPL-3"
homepage="http://gmusicbrowser.org"
distfiles="http://gmusicbrowser.org/download/${pkgname}-${version}.tar.gz"
